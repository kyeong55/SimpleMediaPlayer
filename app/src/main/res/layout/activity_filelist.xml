<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".FileListActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="0dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/filelist_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:gravity="center"
                android:background="@color/colorTheme3"
                android:textColor="@color/colorWhite"
                android:text="MUSIC FILE LIST"
                android:textSize="@dimen/main_title_text_size"/>
        </android.support.v7.widget.CardView>

        <include layout="@layout/content_filelist" />

    </LinearLayout>
    <include
        android:id="@+id/main_loading_page"
        layout="@layout/content_menupage" />
</RelativeLayout>
