<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taegyeong.simplemediaplayer.VideoPlayActivity"
    android:background="@color/colorBlack">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:layout_gravity="center"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/video_focus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"/>
    <LinearLayout
        android:id="@+id/video_controller"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:background="@color/colorTransparent"
        android:layout_alignParentBottom="true">
        <SeekBar
            android:id="@+id/video_seekbar"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:progressTint="@color/colorWhite"
            android:thumb="@null"
            android:layout_marginTop="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/video_current"
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:paddingLeft="16dp"/>
            <ImageView
                android:id="@+id/video_previous"
                android:src="@drawable/ic_skip_previous_black_24dp"
                android:tint="@color/colorWhite"
                android:padding="@dimen/video_button_padding"
                android:layout_width="@dimen/video_button_size"
                android:layout_height="@dimen/video_button_size"
                />
            <ImageView
                android:id="@+id/video_play"
                android:src="@drawable/ic_play_circle_outline_black_24dp"
                android:tint="@color/colorWhite"
                android:layout_width="@dimen/video_button_size"
                android:layout_height="@dimen/video_button_size" />
            <ImageView
                android:id="@+id/video_pause"
                android:src="@drawable/ic_pause_circle_outline_black_24dp"
                android:tint="@color/colorWhite"
                android:layout_width="@dimen/video_button_size"
                android:layout_height="@dimen/video_button_size" />
            <ImageView
                android:id="@+id/video_next"
                android:src="@drawable/ic_skip_next_black_24dp"
                android:tint="@color/colorWhite"
                android:padding="@dimen/video_button_padding"
                android:layout_width="@dimen/video_button_size"
                android:layout_height="@dimen/video_button_size" />
            <TextView
                android:id="@+id/video_duration"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:paddingRight="16dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
