<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taegyeong.simplemediaplayer.MusicPlayActivity"
    android:orientation="vertical"
    android:background="@drawable/music_background">
    <android.support.v4.view.ViewPager
        android:id="@+id/music_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/controller_background"
        android:elevation="4dp">
        <SeekBar
            android:id="@+id/music_seekbar"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:progressTint="@color/colorTheme4"
            android:thumb="@null"
            android:layout_marginTop="8dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/music_volume_button"
                    android:src="@drawable/ic_volume_up_black_24dp"
                    android:tint="@color/colorTheme3"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/music_previous"
                    android:src="@drawable/ic_skip_previous_black_24dp"
                    android:tint="@color/colorTheme4"
                    android:layout_gravity="center_vertical"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <ImageView
                    android:id="@+id/music_play"
                    android:src="@drawable/ic_play_circle_outline_black_24dp"
                    android:tint="@color/colorTheme4"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <ImageView
                    android:id="@+id/music_pause"
                    android:src="@drawable/ic_pause_circle_outline_black_24dp"
                    android:tint="@color/colorTheme4"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <ImageView
                    android:id="@+id/music_next"
                    android:src="@drawable/ic_skip_next_black_24dp"
                    android:tint="@color/colorTheme4"
                    android:layout_gravity="center_vertical"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/music_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorTheme4"
                android:layout_marginLeft="16dp"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/music_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:textColor="@color/colorTheme4"
                android:layout_marginRight="16dp"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
