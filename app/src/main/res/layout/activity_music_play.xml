<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taegyeong.simplemediaplayer.MusicPlayActivity"
    android:orientation="vertical">
    <android.support.v4.view.ViewPager
        android:id="@+id/music_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"></android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:background="@color/colorWhite">
        <SeekBar
            android:id="@+id/music_seekbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:progressTint="@color/colorTheme4"
            android:thumb="@null"
            android:layout_marginTop="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/music_previous"
                android:src="@drawable/ic_skip_previous_black_24dp"
                android:tint="@color/colorTheme4"
                android:padding="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                />
            <ImageView
                android:id="@+id/music_play"
                android:src="@drawable/ic_play_arrow_black_24dp"
                android:tint="@color/colorTheme4"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <ImageView
                android:id="@+id/music_pause"
                android:src="@drawable/ic_pause_black_24dp"
                android:tint="@color/colorTheme4"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <ImageView
                android:id="@+id/music_next"
                android:src="@drawable/ic_skip_next_black_24dp"
                android:tint="@color/colorTheme4"
                android:padding="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
